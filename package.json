{
  "name": "micra",
  "license": "MIT",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap && yarn build:packages",
    "build:dev": "lerna run build:dev --stream",
    "build:prod": "lerna run build:prod --stream",
    "build:packages": "yarn run:scoped packages build",
    "format": "lerna run format --stream --parallel",
    "lint": "lerna run lint --parallel --stream",
    "make": "node scripts/make.js",
    "run:scoped": "node scripts/scopedCommand.js",
    "start": "lerna run start --parallel --stream",
    "test": "lerna run test --parallel --stream"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "fs-extra": "^9.0.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8"
  }
}
